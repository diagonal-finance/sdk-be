{
  "name": "@diagonal-finance/sdk-be",
  "version": "1.2.0",
  "description": "Diagonal finance Backend SDK",
  "repository": "https://github.com/diagonal-finance/sdk-be",
  "homepage": "https://github.com/diagonal-finance/sdk-be",
  "author": {
    "name": "Diagonal Finance"
  },
  "license": "MIT",
  "main": "dist/index.min.js",
  "exports": {
    "import": "./dist/index.min.mjs",
    "require": "./dist/index.min.js"
  },
  "types": "dist/types/src/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.node.config.ts --configPlugin typescript",
    "prepublishOnly": "yarn build && pinst --disable",
    "postpublish": "pinst --enable",
    "postinstall": "husky install",
    "pre-commit": "lint-staged",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier -c .",
    "prettier:fix": "prettier -w .",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "docs": "typedoc src/index.ts --out docs/"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.jsx,.ts,.tsx ."
    ],
    "**/*.{js,jsx,json,md,ts,tsx}": [
      "prettier --config ./.prettierrc --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-inject": "4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-config": "^28.1.0",
    "lint-staged": "^12.4.2",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.8.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
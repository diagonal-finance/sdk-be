{
    "name": "@diagonal-finance/sdk-be",
    "version": "2.0.0",
    "description": "Diagonal finance Backend SDK",
    "repository": "https://github.com/diagonal-finance/sdk-be",
    "homepage": "https://github.com/diagonal-finance/sdk-be",
    "author": {
        "name": "Diagonal Finance"
    },
    "license": "MIT",
    "main": "dist/index.min.js",
    "exports": {
        "import": "./dist/index.min.mjs",
        "require": "./dist/index.min.js"
    },
    "types": "dist/types/src/index.d.ts",
    "files": [
        "dist/",
        "src/"
    ],
    "scripts": {
        "build": "npm run generate:schema && rimraf dist && rollup -c rollup.node.config.ts --configPlugin typescript",
        "prepublishOnly": "npm run build && pinst --disable",
        "postpublish": "pinst --enable",
        "postinstall": "husky install",
        "pre-commit": "lint-staged",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "prettier": "prettier -c .",
        "prettier:fix": "prettier -w .",
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "docs": "typedoc src/index.ts --out docs/",
        "generate:schema": "graphql-codegen"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.jsx,.ts,.tsx ."
        ],
        "**/*.{js,jsx,json,md,ts,tsx}": [
            "prettier --config ./.prettierrc --write"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=16.15.1",
        "npm": "^8.11.0"
    },
    "volta": {
        "node": "16.15.1",
        "npm": "8.11.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/typescript": "^2.4.8",
        "@graphql-codegen/typescript-graphql-request": "^4.4.10",
        "@graphql-codegen/typescript-operations": "^2.4.2",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-inject": "4.0.4",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-replace": "^4.0.0",
        "@rollup/plugin-typescript": "^8.3.2",
        "@types/jest": "^28.1.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.41",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.5.3",
        "husky": "^8.0.1",
        "jest": "^28.1.1",
        "jest-config": "^28.1.1",
        "jest-extended": "^2.0.0",
        "lint-staged": "^13.0.1",
        "pinst": "^3.0.0",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.6",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^28.0.1",
        "ts-node": "^10.8.1",
        "tslib": "^2.4.0",
        "typedoc": "^0.22.17",
        "typescript": "^4.7.3"
    },
    "dependencies": {
        "graphql": "^16.5.0",
        "graphql-request": "^4.3.0",
        "graphql-tag": "^2.12.6",
        "zod": "^3.17.3"
    }
}
